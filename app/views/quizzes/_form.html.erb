
  <div class="group">
    <%= f.label :name, t("activerecord.attributes.quiz.name", :default => "Name"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %>
    <span class="description">Ex: My First Quiz</span>
  </div>

    <%= f.hidden_field :user_id %>

  <% f.fields_for :questions do |builder| %>  
  <div class="group">  
    <%= builder.label :body, "Question", :class => :label %><br />  
    <%= builder.text_area :body, :rows => 3 %>  
  </div>

    <div class="group">
        <%= builder.label :answer, "Answer", :class => :label %></br>
        <%= builder.text_area :answer, :rows => 2 %>
    </div>  

    <div class="group">
        <%= builder.label :points, "Points", :class => :label %>
        <%= builder.select :points, [1,2,3,4,5] %>
    </div>
    <hr />
  <% end %>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
    <%= link_to t("web-app-theme.cancel", :default => "Cancel"), quizzes_path, :class => "text_button_padding link_button" %>
</div>


